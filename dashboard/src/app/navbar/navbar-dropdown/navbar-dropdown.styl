.navbar-dropdown
  height inherit
  outline none

  div
    height inherit
    outline none

  .md-button
    height inherit
    min-width 100%
    padding 0
    margin 0

  .navbar-dropdown-elements
    height initial
    z-index 1
    left 0
    position absolute
    width 100%
    padding 0 10px

    .navbar-dropdown-backdrop
      background transparent
      position fixed
      top 0
      left 0
      height 100vh
      width 100vw

    ul
      position relative
      list-style none
      padding 0
      margin 0

      li
        background-color white
        display list-item
        outline none

        &:first-child
          border-top-left-radius 2px
          border-top-right-radius 2px
          padding-top 5px

        &:last-child
          border-bottom-left-radius 2px
          border-bottom-right-radius 2px
          padding-bottom 5px

        .md-button
          che-border-radius(2px)
          color $label-secondary-color
          text-align left
          text-transform none
          padding 2px 8px
          font-size 11px
          line-height 16px
          height 20px
          min-height 20px

          .navbar-icon
            padding-right 3px
